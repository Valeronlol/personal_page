---
    import TelegramIconSrc from '$public/assets/icons/telegram.svg'
    import LinkedInSrc from '$public/assets/icons/linkedin.svg'
    import GithubSrc from '$public/assets/icons/github.svg'
    import MediumSrc from '$public/assets/icons/medium.svg'

    const socials = [
        {
            url: 'https://www.linkedin.com/in/valeron1289/',
            icon: LinkedInSrc,
        },
        {
            url: 'https://t.me/valerii_kuzivanov',
            icon: TelegramIconSrc,
        },
        {
            url: 'http://github.com/valeronlol',
            icon: GithubSrc,
        },
        {
            url: 'https://medium.com/@valerka',
            icon: MediumSrc,
        },
    ]

    const createUrlMask = (iconUrl) => `
        mask-image: url(${iconUrl});
        mask-repeat: no-repeat;
        mask-position: center;
        -webkit-mask-image: url(${iconUrl});
        -webkit-mask-repeat: no-repeat;
        -webkit-mask-position: center;
    `
---

<div class='social-panel'>
    {socials.map(({ url, icon }) => (
        <div class="image-wrap">
            
            <a
                href={url}
                target='_blank'
            >
                <span class='icon' style={createUrlMask(icon)} />
            </a>
        </div>
    ))}
</div>

<style>
    .social-panel {
        display: flex;
    }
    .social-panel a {
        color: black;
    }
    :global(#app.dark .social-panel a)  {
        color: white;
    }
    .image-wrap {
        display: flex;
        justify-content: center;
        align-items: center;
        cursor: pointer;
    }
    .image-wrap:not(:first-child) {
        margin-left: 16px;
    }
    .icon {
        display: block;
        width: 24px;
        height: 24px;
        cursor: pointer;
        background-color: #4F4F4F;
        transition: background-color .25s ease;
    }
    :global(#app.dark .social-panel .icon) {
        background-color: #DADADA;
    }
    .icon:hover {
        background-color: #5154A9 !important;
    }
</style>